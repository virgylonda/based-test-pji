<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pji.cbt.mapper.AnswerMapper">
	<resultMap type="pji.cbt.entities.Answer" id="resultAnswer">
		<id property="id" column="id"/>
		<result property="questionId" column="question_id"/>
		<result property="ordering" column="ordering"/>
		<result property="answer" column="answer"/>
		<result property="correctAnswer" column="correct_answer"/>
	</resultMap>
	
	<select id="findAllAnswer" resultMap="resultAnswer">
		SELECT * FROM tb_question;
	</select>
	
	<select id="deleteAnswer" parameterType="int" flushCache="true" statementType="PREPARED">
		DELETE FROM tb_question WHERE id = #{id};
	</select>
	
	<select id="findOne" resultMap="resultAnswer">
		SELECT * FROM tb_question WHERE question_id = #{questionId) ;
	</select>
	
</mapper>